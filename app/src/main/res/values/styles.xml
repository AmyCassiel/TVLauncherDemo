<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen" />

    <!--主菜单界面的AutoLinearLayout-->
    <style name="MenuAutoLinearLayout">
        <item name="android:layout_width">247px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/menu_bg_menu_item_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 主菜单界面的imageView -->
    <style name="MenuImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">130px</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--主菜单界面的文本-->
    <style name="MenuTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_text_height</item>
        <item name="android:textSize">35px</item>
        <item name="fontFamily">@font/sim</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10px</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

    <!--主菜单界面的item文本-->
    <style name="MenuItemTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25px</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10px</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/menu_bg_item_selector</item>
    </style>

    <!--主菜单界面Item的AutoLinearLayout-->
    <style name="MenuItemAutoLinearLayout">
        <item name="android:layout_width">247px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/gray_bg</item>
        <item name="android:orientation">vertical</item>
<!--        <item name="android:visibility">gone</item>-->
    </style>

    <!--主界面底部的Image-->
    <style name="BottomLayoutImageStyle">
        <item name="android:layout_width">@dimen/btm_image_width</item>
        <item name="android:layout_height">@dimen/btm_image_width</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/btm_image_margin</item>
    </style>

    <!--主界面底部的text-->
    <style name="BottomLayoutTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">1px</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/btm_image_margin</item>
        <item name="android:layout_marginEnd">@dimen/btm_image_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btm_text_size</item>
    </style>

    <!--投屏-->
    <style name="ApowerMirrorFLStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!--投屏textView-->
    <style name="ApowerMirrorTVStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35px</item>
    </style>

    <!--登陆设置的AutoLinearLayout-->
    <style name="SettingEditAutoLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:visibility">gone</item>
        <item name="android:paddingTop">5px</item>
        <item name="android:paddingStart">50px</item>
        <item name="android:paddingEnd">70px</item>
        <item name="android:paddingBottom">5px</item>
    </style>
    <!--登陆设置输入文本 -->
    <style name="SettingEditTextStyle">
        <item name="android:layout_width">@dimen/et_width</item>
        <item name="android:layout_height">@dimen/et_height</item>
        <item name="android:layout_marginLeft">5px</item>
        <item name="android:paddingLeft">@dimen/et_left_padding</item>
        <item name="android:paddingRight">@dimen/et_left_padding</item>
        <item name="android:background">@drawable/bg_btn_selector</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/et_text_size</item>
    </style>
    <!-- 登陆设置界面按钮 -->
    <style name="SettingBtStyle">
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:background">@drawable/bg_btn_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColor">@color/commom_all_white</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
    </style>

    <!--食物分类页面中的AutoRelativeLayout-->
    <style name="DLAutoRelativeLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <!--食物分类页面中的阴影-->
    <style name="DLShadowLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="sl_shadow_angle">45</item>
        <item name="sl_shadow_color">@color/DKgray</item>
        <item name="sl_shadow_distance">7px</item>
        <item name="sl_shadow_radius">17px</item>
        <item name="sl_shadowed">true</item>
    </style>
    <!--食物分类页面中的图片-->
    <style name="DLImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!--食物分类页面中的文字-->
    <style name="DLboderTextStyle">
        <item name="android:layout_width">200px</item>
        <item name="android:layout_height">80px</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/main_bottom_bg</item>
    </style>
    <style name="DLTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dining_text_size</item>
    </style>

    <!--AboutService的侧栏文字-->
    <style name="AboutTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25px</item>
<!--        <item name="android:textColor">@drawable/list_item_select</item>-->
        <item name="android:layout_margin">25px</item>
    </style>

    <style name="AboutSCol">
        <item name="android:alpha">0.8</item>
        <item name="android:fillViewport">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/about_bg_context</item>
        <item name="android:layout_marginEnd">20px</item>
        <item name="android:layout_marginStart">20px</item>
        <item name="android:layout_marginBottom">30px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AboutContextLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/btm_margin_bottom</item>
        <item name="android:layout_marginEnd">@dimen/btm_margin_bottom</item>
        <item name="android:layout_alignParentBottom">true</item>
        <!--        <item name="android:background">@drawable/about_bg_context</item>-->
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
        <item name="android:alpha">0.7</item>
        <item name="android:layout_marginTop">50px</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!--AboutService的正文标题-->
    <style name="AboutContextTopicLL">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/btn_height</item>
        <item name="android:layout_marginEnd">@dimen/btn_height</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/hotel_tittle_text</item>
    </style>

    <!--AboutService的正文-->
    <style name="AboutContextContextLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/btn_height1</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">9dp</item>
        <item name="android:textSize">@dimen/hotel_text</item>
    </style>

    <style name="DialogStyle" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="AlertDialogStyle" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:textSize">20px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
