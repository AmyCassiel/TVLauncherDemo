<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen"/>

    <!--主界面-->
    <style name="MainLayoutFragmentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <!--主菜单界面的AutoLinearLayout-->
    <style name="MenuAutoLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 主菜单界面的imageView -->
    <style name="MenuImageViewStyle">
        <item name="android:layout_width">@dimen/btn_menu</item>
        <item name="android:layout_height">@dimen/btn_menu</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--主菜单界面的文本-->
    <style name="MenuTextStyle">
        <item name="android:layout_width">@dimen/btn_menu</item>
        <item name="android:layout_height">@dimen/menu_text_height</item>
        <item name="android:textSize">@dimen/text_size_welcome</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>
    <!--主界面底部的Image-->
    <style name="BottomLayoutImageStyle">
        <item name="android:layout_width">@dimen/btm_image_width</item>
        <item name="android:layout_height">@dimen/btm_image_width</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/btm_image_margin</item>
    </style>

    <!--主界面底部的text-->
    <style name="BottomLayoutTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/btm_image_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btm_text_size</item>
    </style>

    <!--登陆设置的AutoLinearLayout-->
    <style name="SettingEditAutoLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:visibility">gone</item>
        <item name="android:paddingTop">5px</item>
        <item name="android:paddingStart">70px</item>
        <item name="android:paddingEnd">70px</item>
        <item name="android:paddingBottom">5px</item>
    </style>
    <!--登陆设置输入文本 -->
    <style name="SettingEditTextStyle">
        <item name="android:layout_width">@dimen/et_width</item>
        <item name="android:layout_height">@dimen/et_height</item>
        <item name="android:layout_marginLeft">@dimen/et_left_margin</item>
        <item name="android:paddingLeft">@dimen/et_left_padding</item>
        <item name="android:paddingRight">@dimen/et_left_padding</item>
        <item name="android:background">@drawable/btn_bg_seletor_blue_gray</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/et_text_size</item>
    </style>
    <!-- 登陆设置界面按钮 -->
    <style name="SettingBtStyle">
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:background">@drawable/btn_bg_seletor_blue_gray</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColor">@color/commom_all_white</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
    </style>

    <!--食物分类页面中的AutoRelativeLayout-->
    <style name="DLAutoRelativeLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <!--食物分类页面中的阴影-->
    <style name="DLShadowLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="sl_shadow_angle">45</item>
        <item name="sl_shadow_color">@color/DKgray</item>
        <item name="sl_shadow_distance">10dp</item>
        <item name="sl_shadow_radius">20dp</item>
        <item name="sl_shadowed">true</item>
    </style>
    <!--食物分类页面中的图片-->
    <style name="DLImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!--食物分类页面中的文字-->
    <style name="DLTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dining_text_size</item>
    </style>

    <!--AboutService的侧栏文字-->
    <style name="AboutTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textSize">30px</item>
        <item name="android:layout_margin">25px</item>
        <item name="android:background">@drawable/bg_service_selector</item>
    </style>

    <!--AboutService的正文Layout-->
    <style name="AboutContextLL">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/btm_margin_bottom</item>
        <item name="android:layout_marginTop">50px</item>
        <item name="android:background">@drawable/hotel_introduce</item>
        <item name="android:orientation">vertical</item>
        <item name="android:alpha">0.7</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--AboutService的正文标题-->
    <style name="AboutContextTopicLL">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/btn_height</item>
        <item name="android:layout_marginTop">@dimen/btn_height</item>
        <item name="android:layout_marginEnd">@dimen/btn_height</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/hotel_tittle_text</item>
    </style>

    <!--AboutService的正文-->
    <style name="AboutContextContextLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/btn_height</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">9dp</item>
        <item name="android:textSize">@dimen/hotel_text</item>
    </style>

</resources>
