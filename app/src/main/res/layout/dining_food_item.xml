<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/food_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10px"
    android:layout_marginTop="5px"
    android:layout_marginBottom="50px"
    android:background="@drawable/white_radius"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:transitionName="food_card">

    <ImageView
        android:id="@+id/food_image"
        android:layout_width="240px"
        android:layout_height="200px"
        android:layout_gravity="center"
        android:transitionName="image_dining" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5px"
        android:layout_marginTop="5px"
        android:layout_marginEnd="7px"
        android:alpha="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/food_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="20px" />

        <TextView
            android:id="@+id/food_amount"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:textSize="15px" />
    </LinearLayout>

    <TextView
        android:id="@+id/food_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7px"
        android:layout_marginEnd="7px"
        android:layout_marginBottom="7px"
        android:textColor="@color/red"
        android:textSize="23px" />

    <TextView
        android:id="@+id/food_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7px"
        android:layout_marginEnd="7px"
        android:layout_marginBottom="7px"
        android:textColor="@color/golden"
        android:textSize="15px"
        android:visibility="gone" />
</LinearLayout>