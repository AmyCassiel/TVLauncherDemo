<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/service_control_type_card1"
    android:layout_width="210px"
    android:layout_height="70px"
    android:layout_marginStart="5px"
    android:layout_marginTop="7px"
    android:layout_marginEnd="5px"
    android:layout_marginBottom="7px"
    android:background="@drawable/service_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/service_control_image1"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_marginStart="10px"
        android:transitionName="image_dining" />

    <TextView
        android:id="@+id/service_control_name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/text_padding"
        android:textColor="@color/darkgray"
        android:textSize="15px" />
</LinearLayout>