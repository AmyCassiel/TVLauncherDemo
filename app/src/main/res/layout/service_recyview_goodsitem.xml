<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/service_control_type_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/white_radius"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:transitionName="food_card">


    <LinearLayout
        android:id="@+id/service_menu"
        android:layout_width="120px"
        android:layout_height="120px"
        android:focusable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/service_control_image"
            android:layout_width="60px"
            android:layout_height="40px"
            android:layout_marginTop="10px"
            android:transitionName="image_dining" />

        <TextView
            android:id="@+id/service_control_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.8"
            android:padding="@dimen/text_padding"
            android:layout_gravity="bottom"
            android:textColor="@color/black"
            android:textSize="15px" />

        <TextView
            android:id="@+id/service_control_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:padding="@dimen/text_padding"
            android:textColor="@color/golden" />
    </LinearLayout>
</RelativeLayout>