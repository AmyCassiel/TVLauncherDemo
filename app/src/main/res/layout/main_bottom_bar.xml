<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/btn_width">

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="@dimen/bottom_width"
        android:layout_height="@dimen/bottom_height"
        android:layout_marginBottom="20px"
        android:gravity="center"
        android:alpha="0.8"
        android:background="@drawable/bottom_shape_radius"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/up"
                style="@style/BottomLayoutImageStyle"
                android:background="@mipmap/up" />

            <ImageButton
                android:id="@+id/down"
                style="@style/BottomLayoutImageStyle"
                android:background="@mipmap/down" />

            <ImageButton
                android:id="@+id/left"
                style="@style/BottomLayoutImageStyle"
                android:background="@mipmap/left" />

            <ImageButton
                android:id="@+id/right"
                style="@style/BottomLayoutImageStyle"
                android:background="@mipmap/right" />

            <TextView
                style="@style/BottomLayoutTextStyle"
                android:text="@string/default_choose" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/btn_height"
            android:layout_margin="@dimen/margin"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/return_key"
                style="@style/BottomLayoutImageStyle"
                android:background="@mipmap/return_key" />

            <TextView
                style="@style/BottomLayoutTextStyle"
                android:text="@string/default_return" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/btn_height"
            android:layout_margin="@dimen/margin"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/home"
                style="@style/BottomLayoutImageStyle"
                android:background="@mipmap/home" />

            <TextView
                style="@style/BottomLayoutTextStyle"
                android:text="@string/home" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>