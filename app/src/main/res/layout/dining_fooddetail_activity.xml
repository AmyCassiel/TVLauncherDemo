<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <com.jiachang.tv_launcher.view.MyImageView
        android:id="@+id/food_img"
        android:layout_width="700px"
        android:layout_height="500px"
        android:layout_margin="50px"
        android:transitionName="image_dining"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/hud_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:transitionName="partOrderOpen"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#77000000"
        android:padding="8dp" />
    <LinearLayout
        android:id="@+id/hudz_view"
        android:layout_width="400px"
        android:layout_height="match_parent"
        android:background="#77000000"
        android:padding="8dp"
        android:orientation="vertical"
        android:transitionName="partOrderOpen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/foodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="50px"
            android:textSize="40px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/foodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10px"
            android:textSize="35px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/foodMaterial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="28px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginTop="50px"
            android:layout_marginEnd="50px"
            android:layout_gravity="end|bottom"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/shoppingcar">
            <ImageButton
                android:id="@+id/add_car"
                android:layout_width="70px"
                android:layout_height="70px" />
        </LinearLayout>

    </LinearLayout>

    <androidx.leanback.widget.HorizontalGridView
        android:id="@+id/h_gridview"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_gravity="bottom"
        android:layout_marginLeft="200px"
        android:layout_marginRight="200px"
        android:layout_marginBottom="80px"
        android:transitionName="partOrderOpen"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>