<?xml version="1.0" encoding="utf-8"?>
<androidx.leanback.widget.BaseCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginStart"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="@dimen/text_padding"
        android:transitionName="food_layout">

        <ImageView
            android:id="@+id/food_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_gravity="center_horizontal"
            android:alpha="0.6"
            android:background="@color/gray"
            android:transitionName="food_image" />

        <TextView
            android:id="@+id/food_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:background="@color/black_gray"
            android:focusable="true"
            android:padding="@dimen/text_padding"
            android:textColor="@color/search_opaque"
            android:textSize="@dimen/btn_text_size" />
    </com.zhy.autolayout.AutoLinearLayout>
</androidx.leanback.widget.BaseCardView>